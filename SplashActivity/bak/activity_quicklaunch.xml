<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:weightSum="4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_bar_tip" android:layout_weight="1"/>

    <Button
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contact" />

    <com.cyou.cma.clockscreen.widget.IconMaskView4Launch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:src="@drawable/launch_contact"/>
     <com.cyou.cma.clockscreen.widget.IconMaskView4Launch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:src="@drawable/launch_folder"/>
      <com.cyou.cma.clockscreen.widget.IconMaskView4Launch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:src="@drawable/launch_add"/>

</LinearLayout>