<com.cyou.cma.clockscreen.widget.folder.ui.CyFolderItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/folder_item_iv"
        android:src="@drawable/icon_quicklaunch_mask_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/folder_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingTop="3dp"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="12sp" />

</com.cyou.cma.clockscreen.widget.folder.ui.CyFolderItem>