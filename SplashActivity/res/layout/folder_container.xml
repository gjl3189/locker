<com.cyou.cma.clockscreen.widget.folder.ui.CyFolderContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="invisible" >

    <com.cyou.cma.clockscreen.widget.folder.ui.CyFolderLine
        android:id="@+id/folder_line_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:clipChildren="false"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1" />

        <include
            android:id="@+id/item_0_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            layout="@layout/folder_item" />

        <include
            android:id="@+id/item_0_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            layout="@layout/folder_item" />

        <include
            android:id="@+id/item_0_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            layout="@layout/folder_item" />

        <include
            android:id="@+id/item_0_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            layout="@layout/folder_item" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1" />
    </com.cyou.cma.clockscreen.widget.folder.ui.CyFolderLine>

    <com.cyou.cma.clockscreen.widget.folder.ui.CyFolderLine
        android:id="@+id/folder_line_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:clipChildren="false"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1" />

        <include
            android:id="@+id/item_1_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            layout="@layout/folder_item" />

        <include
            android:id="@+id/item_1_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            layout="@layout/folder_item" />

        <include
            android:id="@+id/item_1_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            layout="@layout/folder_item" />

        <include
            android:id="@+id/item_1_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            layout="@layout/folder_item" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1" />
    </com.cyou.cma.clockscreen.widget.folder.ui.CyFolderLine>

</com.cyou.cma.clockscreen.widget.folder.ui.CyFolderContainer>