<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_statusbar_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/tab_titlebar"
        layout="@layout/common_header_layout" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/settings_root_bg"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/guideapplock_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </FrameLayout>

        <LinearLayout
            android:id="@+id/guideapplock_hint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#8A000000"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/applock_setting_tip"
                android:textColor="@color/w"
                android:textSize="15sp" />

            <Button
                android:id="@+id/next_button"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn_guide"
                android:gravity="center"
                android:text="@string/next"
                android:textColor="@drawable/selector_textcolor_guide_btn"
                android:textSize="17sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>