<?xml version="1.0" encoding="utf-8"?>
<com.cyou.cma.clockscreen.widget.material.LLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:locker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/desktop_setting_item_height"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/dialog_listview_adapter_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:minHeight="@dimen/desktop_setting_item_height"
        android:paddingLeft="20dp"
        android:textColor="@color/color_black54"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/dialog_listview_adapter_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="36dp"
        android:scaleType="fitCenter"
        android:src="@drawable/selector_dialog_list_checkbox"
        android:visibility="gone" />

</com.cyou.cma.clockscreen.widget.material.LLinearLayout>