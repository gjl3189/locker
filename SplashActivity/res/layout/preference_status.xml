<?xml version="1.0" encoding="utf-8"?>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="15dp" >

        <View
            android:id="@+id/preference_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/settings_list_diver_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/desktop_setting_item_height" >

            <ImageView
                android:id="@android:id/icon"
                android:layout_width="@dimen/desktop_setting_item_height"
                android:layout_height="@dimen/desktop_setting_item_height"
                android:layout_gravity="center"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="6dip"
                android:layout_marginTop="6dip"
                android:layout_weight="1" >

                <LinearLayout
                    android:id="@+id/title_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/preference_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:singleLine="true"
                        android:textColor="@color/color_black87"
                        android:textSize="16sp" />

                    <!--
                 <TextView
                android:id="@+id/icon_new"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/icon_new"
                android:gravity="center_horizontal"
                android:minWidth="35dp"
                android:text="@string/theme_new_label"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:visibility="gone" />
                    -->
                </LinearLayout>

                <TextView
                    android:id="@+id/preference_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/title_layout"
                    android:layout_below="@id/title_layout"
                    android:layout_marginTop="12dp"
                    android:maxLines="2"
                    android:textColor="@color/color_black54"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/preference_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:orientation="vertical"
                android:src="@drawable/selector_checkbox_preference" />
        </LinearLayout>
    </FrameLayout>

