<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:locker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridView
        android:id="@+id/installedapp_gridview"
        style="@style/gridview_stylebar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="@dimen/privacy_applist_width"
        android:fadingEdge="vertical"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:scrollbarFadeDuration="600"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/common_app_gridview_verticalSpacing" />

    <RelativeLayout
        android:id="@+id/installedapp_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/settings_root_bg"
        android:gravity="center_horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/installedapp_loadding_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="@string/launcher_loading_more_text"
            android:textColor="@color/color_black87"
            android:textSize="18sp" />

        <ProgressBar
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/installedapp_loadding_label"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progressbar_anim" />
    </RelativeLayout>

</FrameLayout>
