<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:locker="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/com.cynad.cma.locker"
    xmlns:advert="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/settings_statusbar_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:background="#ececec"
        android:orientation="vertical" >

        <include
            android:id="@+id/tab_titlebar"
            layout="@layout/common_header_layout" />

        <com.cyou.cma.clockscreen.widget.CyScrollLayout
            android:id="@+id/scroll_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#03A9F4"
                android:orientation="vertical" >

                <com.cyou.cma.clockscreen.widget.MyFrameLayout
                    android:id="@+id/security_framelayout"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >
                </com.cyou.cma.clockscreen.widget.MyFrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="58dp" >

                    <FrameLayout
                        android:id="@+id/frame_indicator"
                        android:layout_width="fill_parent"
                        android:layout_height="58dp" >

                        <com.cyou.cma.clockscreen.widget.TabPageIndicator
                            android:id="@+id/tab_indicator"
                            android:layout_width="fill_parent"
                            android:layout_height="58dp"
                            android:background="#3fc4ff"
                            app:drawunder="false"
                            locker:widget_delayclick="true" />

                        <View
                            android:id="@+id/divider_view1"
                            android:layout_width="fill_parent"
                            android:layout_height="6dp"
                            android:background="@drawable/headerbar_bottom_divider" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="58dp"
                        android:paddingTop="16dp" >

                        <com.cyou.cma.clockscreen.widget.TabPageIndicator
                            android:id="@+id/tab_indicator2"
                            android:layout_width="fill_parent"
                            android:layout_height="42dp"
                            android:background="#3fc4ff"
                            app:drawunder="true" />
                        <!-- android:layout_marginTop="16dp" -->

                        <View
                            android:id="@+id/divider_view2"
                            android:layout_width="fill_parent"
                            android:layout_height="6dp"
                            android:background="@drawable/headerbar_bottom_divider" />
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/tab_pager"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <com.cyou.cma.clockscreen.widget.MyAdvertLayout
                    android:id="@+id/myadvertlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    advert:advertId="@string/ad_unit_id" />
            </FrameLayout>
        </com.cyou.cma.clockscreen.widget.CyScrollLayout>
    </LinearLayout>

    <com.cyou.cma.clockscreen.widget.CyGuideMask
        android:id="@+id/guide_mask"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00000000"
        android:visibility="invisible" >

        <com.cyou.cma.clockscreen.widget.TapWithHandView
            android:id="@+id/guide_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitEnd" />

        <TextView
            android:id="@+id/guide_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/guide_info"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </com.cyou.cma.clockscreen.widget.CyGuideMask>

</FrameLayout>