<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:locker="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/com.cynad.cma.locker"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerbar_backbtn_height"
        android:background="@color/settings_statusbar_bg" />

    <com.cyou.cma.clockscreen.widget.LinearLayoutWithDefaultTouchRecepient
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/tab_titlebar"
            layout="@layout/common_header_layout" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <com.cyou.cma.clockscreen.widget.FontedTextView
                        android:id="@+id/headerText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:gravity="center"
                        android:textColor="#de000000"
                        android:textSize="18sp" />

                    <com.cyou.cma.clockscreen.password.widget.PatternView
                        android:id="@+id/lockPattern"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/pattern_view_margin"
                        app:animate="false"
                        app:aspect="square"
                        app:normaldrawable="@drawable/btn_code_lock_default_white"
                        app:paintcolor="#000000"
                        app:pressdrawable="@drawable/btn_code_lock_touched_white" />
                    <!--
                     bottom line looks bad when button bar is their too, omit in this 
					case
                    -->
                    <!--
                    View android:background="@*android:drawable/code_lock_bottom" android:layout_width="match_parent" 
					android:layout_height="8dip" /
                    -->

                    <com.cyou.cma.clockscreen.widget.FontedTextView
                        android:id="@+id/footerText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayout_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/cancle_retry"
                    android:orientation="horizontal" >

                    <com.cyou.cma.clockscreen.widget.FontedButton
                        android:id="@+id/footerLeftButton"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:text="@string/lockpattern_restart_button_text"
                        android:textColor="@color/password_color"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:background="#c0c0c0" />

                    <com.cyou.cma.clockscreen.widget.FontedButton
                        android:id="@+id/footerRightButton"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/lockpattern_confirm_button_text"
                        android:textColor="@color/password_color"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@drawable/headerbar_bottom_divider" />
        </FrameLayout>
    </com.cyou.cma.clockscreen.widget.LinearLayoutWithDefaultTouchRecepient>

</FrameLayout>