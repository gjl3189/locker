<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:locker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerbar_backbtn_height"
        android:background="@color/settings_statusbar_bg" />

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <include
            android:id="@+id/tab_titlebar"
            layout="@layout/common_header_layout" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/background_light" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <com.cyou.cma.clockscreen.widget.FontedTextView
                    android:id="@+id/headerText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:textColor="#de000000"
                    android:textSize="18sp" />

                <!-- spacer above text entry field -->

                <com.cyou.cma.clockscreen.widget.FontedEditText
                    android:id="@+id/password_entry"
                    android:layout_width="278dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="38dp"
                    android:background="@drawable/selecter_bg_edittext"
                    android:gravity="center" android:ellipsize="start"
                    android:inputType="textPassword"
                    android:paddingBottom="2dp"
                    android:singleLine="true"
                    android:textColor="#282828"
                    android:textSize="18sp" android:hint=""/>

                <!-- Spacer between password entry and keyboard -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1" />

                <!-- Alphanumeric keyboard -->

                <com.cyou.cma.clockscreen.password.widget.PasswordEntryKeyboardView
                    android:id="@+id/keyboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#282828" android:keyTextColor="#ffffff"
                    android:keyBackground="@drawable/btn_keyboard_key_fulltrans" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@drawable/headerbar_bottom_divider" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>