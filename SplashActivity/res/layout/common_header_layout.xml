<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:locker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/settings_headbar_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerbar_height"
        android:orientation="horizontal" >

        <com.cyou.cma.clockscreen.widget.material.LImageButton
            android:id="@+id/btn_left"
            android:layout_width="@dimen/headerbar_backbtn_width"
            android:layout_height="@dimen/headerbar_backbtn_height"
            android:src="@drawable/icon_header_back_normal"
            locker:widget_delayclick="true"
            locker:widget_type="left" />

        <com.cyou.cma.clockscreen.widget.FontedTextView
            android:id="@+id/tv_title"
            style="@style/W1_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left|center_vertical" />

        <com.cyou.cma.clockscreen.widget.material.LImageButton
            android:id="@+id/btn_right"
            android:layout_width="@dimen/headerbar_backbtn_width"
            android:layout_height="@dimen/headerbar_backbtn_height"
            android:src="@drawable/icon_header_back_normal"
            android:visibility="invisible"
            locker:widget_delayclick="true"
            locker:widget_type="right" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/headerbar_bottom_divider"
        android:visibility="gone" />

</LinearLayout>