<?xml version="1.0" encoding="utf-8"?>
<com.cyou.cma.clockscreen.password.widget.LockPinPasswordView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#4c000000"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46.5dip"
        android:gravity="bottom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pin_input_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="13.0dip"
            android:shadowColor="#20000000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textColor="#ffffff"
            android:textSize="18.0dip" />

        <LinearLayout
            android:id="@+id/password_pin_box"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <CheckBox
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_marginRight="15.0dip"
                android:background="@drawable/selector_btn_pin_dot"
                android:button="@null"
                android:clickable="false"
                android:focusable="false" />

            <CheckBox
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_marginRight="15.0dip"
                android:background="@drawable/selector_btn_pin_dot"
                android:button="@null"
                android:clickable="false"
                android:focusable="false" />

            <CheckBox
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_marginRight="15.0dip"
                android:background="@drawable/selector_btn_pin_dot"
                android:button="@null"
                android:clickable="false"
                android:focusable="false" />

            <CheckBox
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:background="@drawable/selector_btn_pin_dot"
                android:button="@null"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/password_keypad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="0.0dip" >

        <Button
            android:id="@+id/keypad_num_1"
            style="@style/PIN_NUMBER_BUTTON"
            android:layout_marginRight="12.0dip"
            android:background="@drawable/selector_btn_pin_num_1"
            android:tag="1"
            android:text="1"
            android:textColor="@color/selector_setting_numpad_button" 
            android:textSize="27sp"/>

        <Button
            android:id="@+id/keypad_num_2"
            style="@style/PIN_NUMBER_BUTTON"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_toRightOf="@id/keypad_num_1"
            android:background="@drawable/selector_btn_pin_num_1"
            android:tag="2"
            android:text="2"
            android:textColor="@color/selector_setting_numpad_button" 
            android:textSize="27sp"/>

        <Button
            android:id="@+id/keypad_num_3"
            style="@style/PIN_NUMBER_BUTTON"
            android:layout_marginLeft="12.0dip"
            android:layout_toRightOf="@id/keypad_num_2"
            android:background="@drawable/selector_btn_pin_num_1"
            android:tag="3"
            android:text="3"
            android:textColor="@color/selector_setting_numpad_button" 
            android:textSize="27sp" />

        <Button
            android:id="@+id/keypad_num_4"
            style="@style/PIN_NUMBER_BUTTON"
            android:layout_below="@id/keypad_num_1"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="12.0dip"
            android:background="@drawable/selector_btn_pin_num_1"
            android:tag="4"
            android:text="4"
           android:textColor="@color/selector_setting_numpad_button" 
            android:textSize="27sp" />

        <Button
            android:id="@+id/keypad_num_5"
            style="@style/PIN_NUMBER_BUTTON"
            android:layout_below="@id/keypad_num_2"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="12.0dip"
            android:layout_toRightOf="@id/keypad_num_4"
            android:background="@drawable/selector_btn_pin_num_1"
            android:tag="5"
            android:text="5"
             android:textColor="@color/selector_setting_numpad_button" 
            android:textSize="27sp" />

        <Button
            android:id="@+id/keypad_num_6"
            style="@style/PIN_NUMBER_BUTTON"
            android:layout_below="@id/keypad_num_3"
            android:layout_marginLeft="12.0dip"
            android:layout_marginTop="12.0dip"
            android:layout_toRightOf="@id/keypad_num_5"
            android:background="@drawable/selector_btn_pin_num_1"
            android:tag="6"
            android:text="6"
           android:textColor="@color/selector_setting_numpad_button" 
            android:textSize="27sp" />

        <Button
            android:id="@+id/keypad_num_7"
            style="@style/PIN_NUMBER_BUTTON"
            android:layout_below="@id/keypad_num_4"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="12.0dip"
            android:background="@drawable/selector_btn_pin_num_1"
            android:tag="7"
            android:text="7"
            android:textColor="@color/selector_setting_numpad_button" 
            android:textSize="27sp"/>

        <Button
            android:id="@+id/keypad_num_8"
            style="@style/PIN_NUMBER_BUTTON"
            android:layout_below="@id/keypad_num_5"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="12.0dip"
            android:layout_toRightOf="@id/keypad_num_7"
            android:background="@drawable/selector_btn_pin_num_1"
            android:tag="8"
            android:text="8"
            android:textColor="@color/selector_setting_numpad_button" 
            android:textSize="27sp"/>

        <Button
            android:id="@+id/keypad_num_9"
            style="@style/PIN_NUMBER_BUTTON"
            android:layout_below="@id/keypad_num_6"
            android:layout_marginLeft="12.0dip"
            android:layout_marginTop="12.0dip"
            android:layout_toRightOf="@id/keypad_num_8"
            android:background="@drawable/selector_btn_pin_num_1"
            android:tag="9"
            android:text="9"
            android:textColor="@color/selector_setting_numpad_button" 
            android:textSize="27sp"/>

        <RelativeLayout
            android:id="@+id/keypad_num_reset"
            style="@style/PIN_NUMBER_BUTTON"
            android:layout_below="@id/keypad_num_7"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="12.0dip"
            android:background="@android:color/transparent"
            android:tag="-1" >

            <Button
                style="@style/SECURITY_CONFIGURE_BUTTON"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:text="cancle" />
        </RelativeLayout>

        <Button
            android:id="@+id/keypad_num_0"
            style="@style/PIN_NUMBER_BUTTON"
            android:layout_below="@id/keypad_num_8"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="12.0dip"
            android:layout_toRightOf="@id/keypad_num_reset"
            android:background="@drawable/selector_btn_pin_num_1"
            android:tag="0"
            android:text="0"
            android:textColor="@color/selector_setting_numpad_button" 
            android:textSize="27sp" />

        <RelativeLayout
            android:id="@+id/keypad_num_back"
            style="@style/PIN_NUMBER_BUTTON"
            android:layout_below="@id/keypad_num_9"
            android:layout_marginLeft="12.0dip"
            android:layout_marginTop="12.0dip"
            android:layout_toRightOf="@id/keypad_num_0"
            android:background="@android:color/transparent"
            android:tag="-2" >

            <Button android:layout_width="36dp"
                android:layout_height="16dp"
                android:background="@drawable/selector_btn_password_back"
                style="@style/SECURITY_CONFIGURE_BUTTON"
                android:layout_centerInParent="true"
                android:clickable="false"
                  />
        </RelativeLayout>
    </RelativeLayout>

</com.cyou.cma.clockscreen.password.widget.LockPinPasswordView>