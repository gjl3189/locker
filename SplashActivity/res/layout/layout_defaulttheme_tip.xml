<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2000000" >

    <com.cyou.cma.clockscreen.defaulttheme.TipAnimView
        android:id="@+id/defaulttheme_tip_anim_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:src="@drawable/icon_defaulttheme_tip_top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="14dp"
        android:src="@drawable/icon_defaulttheme_tip_left" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="14dp"
        android:src="@drawable/icon_defaulttheme_tip_right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="74dp"
        android:gravity="center_horizontal"
        android:text="@string/default_hint_wallpaper"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</FrameLayout>